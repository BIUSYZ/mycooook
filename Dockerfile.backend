FROM node:20-alpine
WORKDIR /app

# Install dependencies
COPY package*.json ./
# We need prisma client and ts-node in production
RUN npm install --omit=dev && npm install prisma typescript ts-node @types/node

# Copy server code
COPY server ./server
COPY prisma ./prisma
COPY tsconfig.json ./

# Generate Prisma Client
RUN npx prisma generate

# Create uploads directory
RUN mkdir -p server/uploads

# Expose port
EXPOSE 3000

# Start server
CMD ["npm", "run", "server"]
